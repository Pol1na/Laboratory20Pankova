<Window x:Class="Laboratory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" ContentRendered="MainFrame_ContentRendered"></Frame>
        <Grid Background="#FF498C51">
            <Image Source="Images/microscope_117764.ico" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"></Image>
            <TextBlock Foreground="White" Style="{StaticResource MainText}">Laboratory 20</TextBlock>
        </Grid>
        <Grid Background="#FF498C51" Grid.Row="2" >
            <Button Name="BackBtn" Visibility="Hidden" HorizontalAlignment="Right" VerticalAlignment="Center" Width="120" Height="25" Background="#FF76E383" Margin="5" FontSize="16" Foreground="White" Click="BackBtn_Click">Back</Button>
        </Grid>
        
    </Grid>
</Window>
