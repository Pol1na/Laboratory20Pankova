<Page x:Class="Laboratory.Pages.AccountantPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Laboratory.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccountantPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Style="{StaticResource MainStackPanel}" Margin="0 50 0 0" Grid.Column="1">
            <Button Style="{StaticResource MainButton}" Name="ShowReportsBtn">Reports</Button>
            <Button Style="{StaticResource MainButton}" Name="NewBillBtn">New bill</Button>
        </StackPanel>
    </Grid>
</Page>
